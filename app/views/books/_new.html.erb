
<%= form_with model: book do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <p>Opinion</p>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
<% end %>
