<div>
  <%= flash[:notice] %>
</div>



<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'new', book_new: @book_new, user_new: @user_new, users: @users %>
    </div>
    <div class="col-md-8">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @book.user.get_profile_image(100,100) %><br><%= link_to @book.user.name, user_path(@book.user) %></td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book) , class: 'btn btn-success' %></td>
              <td><%= link_to 'Destroy', books_path(@book) , class: 'btn btn-danger' %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>