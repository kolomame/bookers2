<div class="container">
  <div class="row">
    <div class="m-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
      <%= @book.errors.count %> error prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <label>Opinion</label><br>
          <%= f.text_area :body %>
        </div>

        <div class="actions">
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        </div>
      <% end %>
      <div>
          <%= link_to 'Show', book_path(@book) %>
          |
          <%= link_to 'Back', books_path %>
      </div>
    </div>
  </div>
</div>

