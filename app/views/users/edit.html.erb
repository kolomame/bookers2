<div class="container">
  <div class="row">
    <div class="m-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <%= @user.errors.count %> error prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <label for="user_image">Image</label><br>
          <%= f.file_field :profile_image %>
        </div>
        <div class="field">
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction %>
        </div>

        <div class="actions">
          <%= f.submit 'Update User', class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

